<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".third">


    <TextView
        android:layout_width="119dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="409dp"
        android:text="Item name:"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/textin"
        android:layout_width="275dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="131dp"
        android:layout_marginRight="-268dp"
        android:layout_marginBottom="419dp"
        android:layout_toLeftOf="@id/add"
        android:hint="Enter the item"
        android:inputType="text" />


    <TextView
        android:layout_width="119dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="288dp"
        android:text="Quantity:"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="275dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="131dp"
        android:layout_marginRight="-271dp"
        android:layout_marginBottom="287dp"
        android:layout_toLeftOf="@id/add"
        android:hint="Enter the quantity!.."
        android:inputType="number" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="247dp"
        android:layout_marginRight="247dp"
        android:layout_marginBottom="174dp"
        android:text="Price(per unit):"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/price"
        android:layout_width="275dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="131dp"
        android:layout_marginRight="-231dp"
        android:layout_marginBottom="174dp"
        android:hint="Enter the price per kg!!"

        android:inputType="number" />

    <Button
        android:id="@+id/add"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="96dp"
        android:onClick="Move"
        android:text="Add Item" />

</RelativeLayout>