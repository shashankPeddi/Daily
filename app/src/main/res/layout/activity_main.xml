            android:textSize="30dp"
            android:textStyle="bold"

            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        android:text="Forgot Password"
        />
    </RelativeLayout>
